<%- include("partials/header") %>
        <h1>Edit entry</h1>
    
        <div class="row">
            <form action="/income/edit/<%= income.id %>?_method=PUT" method="POST" class="col-md">
                <div class="container">
                    <div class="form-group">
                        <label  for="date">Date</label>
                        <input class="form-control" type="date" id="date" name="income[date]" value="<%=income.date %>">
                    </div>
                    <div class="form-group">
                        <label for="expense" >Expense</label>
                        <input type="number" class="form-control" id="expense" name="income[expense_amount]" value="<%=income.expense_amount %>">
                    </div>
                    <div class="form-group">
                        <label  for="Income">Income</label>
                        <input class="form-control" type="number" id="number" name="income[income_amount]" value="<%=income.income_amount%>">
                    </div>
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>

<%- include("partials/footer") %>
